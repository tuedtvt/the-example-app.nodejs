pipeline {
    
    agent any  
    environment {
        PASS = credentials('dockerpassfortuedtvt') 
    }
    stages {
        stage('Prepare') {
                    
            steps {
                checkout scm
            }
        }

        stage('Build') {
                    
            steps {
                sh '''
                    echo $PWD
                    chmod +x -R ./jenkins/build/build.sh
                    ./jenkins/build/build.sh
                '''
            }
        }
        stage('Push') {
            steps {
                sh '''
                chmod +x -R ./jenkins/push/push.sh
                ./jenkins/push/push.sh''
                '''
            }
        }
    }
}
